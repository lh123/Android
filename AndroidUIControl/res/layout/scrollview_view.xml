			android:ems="10"/>

		<EditText
			android:layout_height="wrap_content"
			android:inputType="textMultiLine"
			android:layout_width="wrap_content"
			android:ems="10"/>

		<EditText
			android:layout_height="wrap_content"
			android:inputType="textMultiLine"
			android:layout_width="wrap_content"
			android:ems="10"/>

